@using MedicalCenter.Web.ViewModels.Specialty
@model GetSpecialtyViewModel

@{
    ViewData["Title"] = "Изтриване на докторска специалност";
}

<h1>Изтриване на докторска специалност</h1>

<h3>Сигурни ли сте, че искате да изтриете тази докторска специалност?</h3>
<div>
    <h4>Докторска специалност</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <br>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Изтриване" class="btn btn-danger" /> |
        <a asp-action="Index">ОБратно към всички докторски специалности</a>
    </form>
</div>
