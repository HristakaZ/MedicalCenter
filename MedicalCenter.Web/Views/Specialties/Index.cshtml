@using MedicalCenter.Web.ViewModels.Specialty
@model IEnumerable<GetSpecialtyViewModel>

@{
    ViewData["Title"] = "Всички докторски специалности";
    int pageNumber = ViewBag.PageNumber;
    int pageSize = ViewBag.PageSize;
    int totalItems = ViewBag.TotalItems;
    int totalPages = (int)Math.Ceiling(totalItems / (double)pageSize);
}

<!-- PAGE HEADER -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Всички докторски специалности</h1>

    <span class="badge bg-primary fs-6 shadow-sm">
        Общо: @totalItems
    </span>
</div>

<!-- CREATE BUTTON -->
<div class="mb-4">
    <a asp-action="Create" class="btn btn-success px-4 shadow-sm">
        <i class="bi bi-plus-circle"></i> Създаване на нова специалност
    </a>
</div>

<!-- FILTER CARD -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-light fw-semibold">
        <i class="bi bi-funnel"></i> Филтри
    </div>

    <div class="card-body">
        <form method="get">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Описание</label>
                    <input type="text" name="description" value="@ViewBag.Description"
                           class="form-control shadow-sm"
                           placeholder="Търсене по описание..." />
                </div>

                <div class="col-md-6 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary px-4 shadow-sm">
                        <i class="bi bi-search"></i> Търси
                    </button>

                    <a href="@Url.Action("Index", "Specialties")"
                       class="btn btn-outline-secondary px-4 shadow-sm">
                        <i class="bi bi-x-circle"></i> Изчисти
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- TABLE CARD -->
<div class="card shadow-sm border-0">
    <div class="card-header bg-light fw-semibold">
        <i class="bi bi-list-ul"></i> Списък със специалности
    </div>

    <div class="card-body p-0">
        <table class="table table-hover table-striped align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                    <th class="text-end">Действия</th>
                </tr>
            </thead>

            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="2" class="text-center py-4 text-muted">
                            <i class="bi bi-inbox fs-3 d-block mb-2"></i>
                            Няма намерени специалности.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Description</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.ID"
                                   class="btn btn-sm btn-outline-warning me-1 shadow-sm">
                                    <i class="bi bi-pencil"></i> Редактиране
                                </a>

                                <a asp-action="Details" asp-route-id="@item.ID"
                                   class="btn btn-sm btn-outline-info me-1 shadow-sm">
                                    <i class="bi bi-info-circle"></i> Детайли
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.ID"
                                   class="btn btn-sm btn-outline-danger shadow-sm">
                                    <i class="bi bi-trash"></i> Изтриване
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- PAGINATION -->
@if (totalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">

            <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
                <a class="page-link"
                   href="?pageNumber=@(pageNumber - 1)&description=@ViewBag.Description">
                    <i class="bi bi-chevron-left"></i>
                </a>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == pageNumber ? "active" : "")">
                    <a class="page-link"
                       href="?pageNumber=@i&description=@ViewBag.Description">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(pageNumber == totalPages ? "disabled" : "")">
                <a class="page-link"
                   href="?pageNumber=@(pageNumber + 1)&description=@ViewBag.Description">
                    <i class="bi bi-chevron-right"></i>
                </a>
            </li>

        </ul>
    </nav>
}

<!-- SUCCESS TOAST -->
@if (TempData["Success"] != null)
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="successToast" class="toast text-bg-success border-0 position-relative"
             role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">

            <div class="d-flex">
                <div class="toast-body">@TempData["Success"]</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast"></button>
            </div>

            <div class="toast-progress"></div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            new bootstrap.Toast(document.getElementById("successToast")).show();
        });
    </script>
}