@using MedicalCenter.Web.ViewModels.Specialty
@model GetSpecialtyViewModel

@{
    ViewData["Title"] = "Създаване на докторска специалност";
}

<hr />

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-3">Създаване</h1>

    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm px-4">
        <i class="bi bi-arrow-left"></i> Обратно към всички докторски специалности
    </a>
</div>

<h4 class="text-muted">Докторска специалност</h4>

<div class="row">
    <div class="col-md-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Description" class="form-control shadow-sm" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success px-4 py-2 shadow-sm">
                <i class="bi bi-check-lg"></i> Запис
            </button>
        </form>
    </div>
</div>

<!-- ERROR TOAST (always rendered so client-side validation can trigger it) -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="errorToast" class="toast text-bg-danger border-0 position-relative"
         role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">

        <div class="d-flex">
            <div class="toast-body">Моля, поправете грешките във формата.</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast"></button>
        </div>

        <div class="toast-progress"></div>
    </div>
</div>

<!-- SERVER-SIDE ERROR TOAST -->
@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Count > 0)
{
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            new bootstrap.Toast(document.getElementById("errorToast")).show();
        });
    </script>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const form = $("form");

            // CLIENT-SIDE VALIDATION ERROR TOAST
            form.on("invalid-form.validate", function () {
                const toastEl = document.getElementById("errorToast");
                if (toastEl) {
                    new bootstrap.Toast(toastEl).show();
                }
            });
        });
    </script>
}
