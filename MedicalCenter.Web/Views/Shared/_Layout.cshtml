@inject IHttpContextAccessor HttpContextAccessor
@{
    int? userId = HttpContextAccessor.HttpContext.Session.GetInt32("UserID");
    string? userRole = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Медицински център</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedicalCenter.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Медицински център</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (userRole == "Patient" || userRole == "Doctor")
                        {
                            <li>
                                <a class="nav-link text-dark" asp-controller="MedicalExaminations" asp-action="MyExaminations">
                                    <i class="bi bi-list-ul"></i> Моите медицински прегледи
                                </a>
                            </li>
                        }

                        @if (userRole == "Administrator")
                        {
                            <li><a class="nav-link text-dark" asp-controller="Users" asp-action="Index"><i class="bi bi-list-ul"></i> Потребители</a></li>
                            <li><a class="nav-link text-dark" asp-controller="MedicalExaminations" asp-action="Index"><i class="bi bi-list-ul"></i> Всички медицински прегледи</a></li>
                            <li><a class="nav-link text-dark" asp-controller="Specialties" asp-action="Index"><i class="bi bi-list-ul"></i> Докторски специалности</a></li>
                        }

                        @if (userId.HasValue && userId.Value != 0)
                        {
                            <li class="nav-item dropdown ms-auto">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" data-bs-toggle="dropdown">
                                    @HttpContextAccessor.HttpContext.Session.GetString("UserEmail")
                                </a>

                                <ul class="dropdown-menu">
                                    <li>
                                        @switch (userRole)
                                        {
                                            case "Patient":
                                                <a class="dropdown-item" asp-controller="Users" asp-action="EditPatient" asp-route-id="@userId"><i class="bi bi-person-heart"></i> Профил</a>
                                                <a class="dropdown-item" asp-controller="Users" asp-action="ChangePassword" asp-route-id="@userId">
                                                    <i class="bi bi-key"></i> Смяна на парола
                                                </a>
                                                break;

                                            case "Doctor":
                                                <a class="dropdown-item" asp-controller="Users" asp-action="EditDoctor" asp-route-id="@userId"><i class="bi bi-clipboard2-pulse"></i> Профил</a>
                                                <a class="dropdown-item" asp-controller="Users" asp-action="ChangePassword" asp-route-id="@userId">
                                                    <i class="bi bi-key"></i> Смяна на парола
                                                </a>
                                                break;

                                            case "Administrator":
                                                <a class="dropdown-item" asp-controller="Users" asp-action="Edit" asp-route-id="@userId"><i class="bi bi-person-gear"></i> Профил</a>
                                                <a class="dropdown-item" asp-controller="Users" asp-action="ChangePassword" asp-route-id="@userId">
                                                    <i class="bi bi-key"></i> Смяна на парола
                                                </a>
                                                break;
                                        }
                                    </li>

                                    <li>
                                        <a class="dropdown-item" asp-controller="Users" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right"></i> Излизане
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="ms-auto">
                                <a class="nav-link text-dark" asp-controller="Users" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Логин
                                </a>
                            </li>
                            <li><a class="nav-link text-dark" asp-controller="Users" asp-action="Register"><i class="bi bi-person-plus"></i> Регистрация</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- DELETE CONFIRMATION MODAL -->
    <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">

                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle-fill"></i> Потвърждение за изтриване
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    Сигурни ли сте, че искате да изтриете този запис?
                    <br />
                    <span class="text-muted small">Това действие е необратимо.</span>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отказ</button>
                    <a id="confirmDeleteBtn" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Изтриване
                    </a>
                </div>

            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Global delete confirmation handler
        function confirmDelete(url) {
            document.getElementById("confirmDeleteBtn").setAttribute("href", url);
            new bootstrap.Modal(document.getElementById("deleteConfirmModal")).show();
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
