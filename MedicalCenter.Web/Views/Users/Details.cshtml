@using MedicalCenter.Web.Constants
@using MedicalCenter.Web.Dtos.User
@model GetUserDto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role.Description)
        </dd>
    </dl>
</div>
<div>
    @switch (Model.Role.ID)
    {
        case RoleConstants.AdminRoleId:
            <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a>
            break;
        case RoleConstants.DoctorRoleId:
            <a asp-action="EditDoctor" asp-route-id="@Model?.ID">Edit</a>
            break;
        case RoleConstants.PatientRoleId:
            <a asp-action="EditPatient" asp-route-id="@Model?.ID">Edit</a>
            break;
    }
    |
    <a asp-action="Index">Back to List</a>
</div>
