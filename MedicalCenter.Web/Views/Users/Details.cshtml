@using MedicalCenter.Web.Constants
@using MedicalCenter.Web.Dtos.User
@model GetUserDto
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Детайли за потребител";
    int loggedInUserID = HttpContextAccessor.HttpContext!.Session.GetInt32("UserID")!.Value;
    bool isAdministrator = HttpContextAccessor.HttpContext.Session.GetString("UserRole") == "Administrator";
}

<!-- PAGE HEADER -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Детайли за потребител</h1>

    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm px-4">
        <i class="bi bi-arrow-left"></i> Обратно към всички потребители
    </a>
</div>

<!-- DETAILS CARD -->
<div class="card shadow-sm border-0 col-md-8 p-0">
    <div class="card-header bg-light fw-semibold">
        <i class="bi bi-info-circle"></i> Информация за потребителя
    </div>

    <div class="card-body">

        <dl class="row mb-0">

            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(model => model.Surname)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Surname)
            </dd>

            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(model => model.Role)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Role.Description)
            </dd>

        </dl>

    </div>
</div>

<!-- ACTION BUTTONS -->
<div class="mt-4 d-flex gap-2">

    @switch (Model.Role.ID)
    {
        case RoleConstants.AdminRoleId:
            <a asp-action="Edit" asp-route-id="@Model.ID"
               class="btn btn-warning shadow-sm px-4">
                <i class="bi bi-pencil"></i> Редактиране на потребител
            </a>

            if (Model.ID != loggedInUserID && isAdministrator)
            {
                <a asp-action="Delete" asp-route-id="@Model.ID"
                   class="btn btn-danger shadow-sm px-4">
                    <i class="bi bi-trash"></i> Изтриване на потребител
                </a>
            }
            break;

        case RoleConstants.DoctorRoleId:
            <a asp-action="EditDoctor" asp-route-id="@Model.ID"
               class="btn btn-warning shadow-sm px-4">
                <i class="bi bi-pencil"></i> Редактиране на доктор
            </a>

            <a asp-action="Delete" asp-route-id="@Model.ID"
               class="btn btn-danger shadow-sm px-4">
                <i class="bi bi-trash"></i> Изтриване на доктор
            </a>
            break;

        case RoleConstants.PatientRoleId:
            <a asp-action="EditPatient" asp-route-id="@Model.ID"
               class="btn btn-warning shadow-sm px-4">
                <i class="bi bi-pencil"></i> Редактиране на пациент
            </a>

            <a asp-action="Delete" asp-route-id="@Model.ID"
               class="btn btn-danger shadow-sm px-4">
                <i class="bi bi-trash"></i> Изтриване на пациент
            </a>
            break;
    }

</div>
