@using MedicalCenter.Web.Dtos.User
@model EditDoctorDto
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Редактиране на доктор";
    bool isAdministrator = HttpContextAccessor.HttpContext.Session.GetString("UserRole") == "Administrator";
}

<!-- PAGE HEADER -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Редактиране на доктор</h1>

    @if (isAdministrator)
    {
        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm px-4">
            <i class="bi bi-arrow-left"></i> Обратно към всички потребители
        </a>
    }
</div>

<!-- FORM CARD (LEFT-ALIGNED) -->
<div class="card shadow-sm border-0 col-md-6 p-0">
    <div class="card-header bg-light fw-semibold">
        <i class="bi bi-person-badge"></i> Данни на доктора
    </div>

    <div class="card-body">
        <form asp-action="EditDoctor">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- ROOM -->
            <div class="mb-3">
                <label asp-for="Room" class="form-label fw-semibold"></label>
                <input asp-for="Room" class="form-control shadow-sm" />
                <span asp-validation-for="Room" class="text-danger"></span>
            </div>

            <!-- SPECIALTY -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Специалност</label>
                <select asp-for="SelectedSpecialty" asp-items="Model.Specialties"
                        class="form-control shadow-sm"></select>
                <span asp-validation-for="SelectedSpecialty" class="text-danger"></span>
            </div>

            <!-- NAME -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control shadow-sm" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- SURNAME -->
            <div class="mb-3">
                <label asp-for="Surname" class="form-label fw-semibold"></label>
                <input asp-for="Surname" class="form-control shadow-sm" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <!-- ROLE (Admins only) -->
            @if (isAdministrator)
            {
                <div class="mb-3">
                    <label class="form-label fw-semibold">Роля</label>
                    <select asp-for="SelectedRole" asp-items="Model.Roles"
                            class="form-control shadow-sm"></select>
                    <span asp-validation-for="SelectedRole" class="text-danger"></span>
                </div>
            }

            <input type="hidden" asp-for="ID" />

            @Html.ValidationMessage("CannotChangeRoleOfDoctor", new { @class = "text-danger" })

            <!-- SUBMIT BUTTON -->
            <button type="submit" class="btn btn-success px-4 py-2 shadow-sm mt-2">
                <i class="bi bi-check-lg"></i> Запис
            </button>
        </form>
    </div>
</div>

<!-- ERROR TOAST (always rendered so client-side validation can trigger it) -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="errorToast" class="toast text-bg-danger border-0 position-relative"
         role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">

        <div class="d-flex">
            <div class="toast-body">Моля, поправете грешките във формата.</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast"></button>
        </div>

        <div class="toast-progress"></div>
    </div>
</div>

<!-- SERVER-SIDE ERROR TOAST -->
@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Count > 0)
{
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            new bootstrap.Toast(document.getElementById("errorToast")).show();
        });
    </script>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // CLIENT-SIDE VALIDATION ERROR TOAST
        document.addEventListener("DOMContentLoaded", () => {
            const form = $("form");

            form.on("invalid-form.validate", function () {
                const toastEl = document.getElementById("errorToast");
                if (toastEl) {
                    new bootstrap.Toast(toastEl).show();
                }
            });
        });
    </script>
}
