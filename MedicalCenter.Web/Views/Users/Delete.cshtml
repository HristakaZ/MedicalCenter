@using MedicalCenter.Web.Dtos.User
@model GetUserDto

@{
    ViewData["Title"] = "Изтриване на потребител";
}

<h1>Изтриване на потребител</h1>

<h3>Сигурен ли сте, че искате да изтриете този потребител?</h3>


<div>
    <h4>Потребител</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Email)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Email)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Surname)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Surname)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Role.Description)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Role.Description)</dd>
    </dl>
    @Html.ValidationMessage("CannotDeleteUser", new { @class = "text-danger" })

    <br>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Изтриване" class="btn btn-danger" /> |
        <a asp-action="Index">Обратно към всички потребители</a>
    </form>
</div>
