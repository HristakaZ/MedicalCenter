@using MedicalCenter.Web.Dtos.User
@model GetUserDto

@{
    ViewData["Title"] = "Изтриване на потребител";
}

<!-- PAGE HEADER -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0 text-danger">
        <i class="bi bi-trash"></i> Изтриване на потребител
    </h1>

    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm px-4">
        <i class="bi bi-arrow-left"></i> Обратно към всички потребители
    </a>
</div>

<h4 class="text-danger fw-semibold">Сигурни ли сте, че искате да изтриете този потребител?</h4>

<!-- DETAILS CARD -->
<div class="card shadow-sm border-0 col-md-8 p-0 mt-3">
    <div class="card-header bg-light fw-semibold">
        <i class="bi bi-person"></i> Данни на потребителя
    </div>

    <div class="card-body">

        <dl class="row mb-0">

            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(m => m.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.Email)
            </dd>

            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(m => m.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.Name)
            </dd>

            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(m => m.Surname)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.Surname)
            </dd>

            <dt class="col-sm-3 fw-bold text-secondary">
                Роля
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.Role.Description)
            </dd>

        </dl>

        <div class="mt-3">
            @Html.ValidationMessage("CannotDeleteUser", new { @class = "text-danger fw-semibold" })
        </div>

    </div>
</div>

<!-- ACTION BUTTONS -->
<div class="mt-4 d-flex gap-2">

    <!-- DELETE BUTTON triggers modal -->
    <button type="button" class="btn btn-danger px-4 shadow-sm" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
        <i class="bi bi-trash"></i> Изтриване
    </button>

    <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
        <i class="bi bi-x-circle"></i> Отказ
    </a>

</div>

<!-- CONFIRM DELETE MODAL -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow">

            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">
                    <i class="bi bi-exclamation-triangle"></i> Потвърждение за изтриване
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                Наистина ли желаете да изтриете потребителя
                <strong>@Model.Email</strong>?
                Това действие е необратимо.
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">
                    Отказ
                </button>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="ID" />
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash"></i> Изтриване
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>

<!-- ERROR TOAST -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="errorToast" class="toast text-bg-danger border-0 position-relative"
         role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">

        <div class="d-flex">
            <div class="toast-body">Операцията не може да бъде изпълнена.</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast"></button>
        </div>

        <div class="toast-progress"></div>
    </div>
</div>

<!-- SERVER-SIDE ERROR TOAST -->
@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Count > 0)
{
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            new bootstrap.Toast(document.getElementById("errorToast")).show();
        });
    </script>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // CLIENT-SIDE VALIDATION ERROR TOAST
        document.addEventListener("DOMContentLoaded", () => {
            const form = $("form");

            form.on("invalid-form.validate", function () {
                const toastEl = document.getElementById("errorToast");
                if (toastEl) {
                    new bootstrap.Toast(toastEl).show();
                }
            });
        });
    </script>
}
