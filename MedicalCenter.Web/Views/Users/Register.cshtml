@using MedicalCenter.Web.Dtos.User
@model RegisterPatientUserDto

@{
    ViewData["Title"] = "Регистрация на пациент";
}

<!-- REMOVE NUMBER SPINNERS -->
<style>
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }
</style>

<!-- PAGE HEADER -->
<div class="d-flex justify-content-center align-items-center mb-4">
    <h1 class="mb-0">Регистрация на пациент</h1>
</div>

<!-- FORM CARD (CENTERED) -->
<div class="d-flex justify-content-center">
    <div class="card shadow-sm border-0 col-md-6 p-0">
        <div class="card-header bg-light fw-semibold">
            <i class="bi bi-person-plus"></i> Въведете данните на пациента
        </div>

        <div class="card-body">
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- EMAIL -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control shadow-sm" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- PASSWORD -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <input asp-for="Password" type="password" class="form-control shadow-sm" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- NAME -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control shadow-sm" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- SURNAME -->
                <div class="mb-3">
                    <label asp-for="Surname" class="form-label fw-semibold"></label>
                    <input asp-for="Surname" class="form-control shadow-sm" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>

                <!-- SSN -->
                <div class="mb-3">
                    <label asp-for="SSN" class="form-label fw-semibold"></label>
                    <input asp-for="SSN" type="number" maxlength="10" class="form-control shadow-sm" />
                    <span asp-validation-for="SSN" class="text-danger"></span>
                </div>

                <!-- PHONE -->
                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                    <input asp-for="PhoneNumber" maxlength="20" class="form-control shadow-sm" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <!-- DOCTOR -->
                <div class="mb-3">
                    <label asp-for="SelectedDoctor" class="form-label fw-semibold"></label>
                    <select asp-for="SelectedDoctor" asp-items="Model.Doctors"
                            class="form-control shadow-sm"></select>
                    <span asp-validation-for="SelectedDoctor" class="text-danger"></span>
                </div>

                <!-- SUBMIT BUTTON -->
                <button type="submit" class="btn btn-success px-4 py-2 shadow-sm">
                    <i class="bi bi-check-lg"></i> Регистрация
                </button>
            </form>
        </div>
    </div>
</div>

<!-- ERROR TOAST (always rendered so client-side validation can trigger it) -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="errorToast" class="toast text-bg-danger border-0 position-relative"
         role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">

        <div class="d-flex">
            <div class="toast-body">Моля, поправете грешките във формата.</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast"></button>
        </div>

        <div class="toast-progress"></div>
    </div>
</div>

<!-- SERVER-SIDE ERROR TOAST -->
@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Count > 0)
{
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            new bootstrap.Toast(document.getElementById("errorToast")).show();
        });
    </script>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // CLIENT-SIDE VALIDATION ERROR TOAST
        document.addEventListener("DOMContentLoaded", () => {
            const form = $("form");

            form.on("invalid-form.validate", function () {
                const toastEl = document.getElementById("errorToast");
                if (toastEl) {
                    new bootstrap.Toast(toastEl).show();
                }
            });
        });
    </script>
}
