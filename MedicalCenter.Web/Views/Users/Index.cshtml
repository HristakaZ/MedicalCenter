@using MedicalCenter.Web.Constants
@using MedicalCenter.Web.Dtos.User
@model IEnumerable<GetUserDto>

@{
    ViewData["Title"] = "Users";
    int pageNumber = ViewBag.PageNumber;
    int pageSize = ViewBag.PageSize;
    int totalItems = ViewBag.TotalItems;
    int totalPages = (int)Math.Ceiling(totalItems / (double)pageSize);
}

<h1>Users</h1>

<!-- FILTER FORM -->
<form method="get" class="mb-4">
    <div class="row">

        <div class="col-md-4">
            <label class="form-label">Email</label>
            <input type="text" name="email" value="@ViewBag.Email" class="form-control" placeholder="Search email..." />
        </div>

        <div class="col-md-4">
            <label class="form-label">Name</label>
            <input type="text" name="name" value="@ViewBag.Name" class="form-control" placeholder="Search name..." />
        </div>

        <div class="col-md-4">
            <label class="form-label">Surname</label>
            <input type="text" name="surname" value="@ViewBag.Surname" class="form-control" placeholder="Search surname..." />
        </div>

    </div>

    <div class="row mt-3">
        <div class="col-md-12 d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-primary">Apply Filters</button>
            <a href="@Url.Action("Index", "Users")" class="btn btn-secondary">Clear Filters</a>
        </div>
    </div>
</form>

<!-- TABLE -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Surname)</th>
            <th>@Html.DisplayNameFor(model => model.First().Role)</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td><b>@item.Role.Description</b></td>
                <td>
                    @switch (item.Role.ID)
                    {
                        case RoleConstants.AdminRoleId:
                            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                            break;
                        case RoleConstants.DoctorRoleId:
                            <a asp-action="EditDoctor" asp-route-id="@item.ID">Edit</a>
                            break;
                        case RoleConstants.PatientRoleId:
                            <a asp-action="EditPatient" asp-route-id="@item.ID">Edit</a>
                            break;
                    }
                    |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- PAGINATION -->
@if (totalPages > 1)
{
    <nav>
        <ul class="pagination">

            @if (pageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="?pageNumber=@(pageNumber - 1)&email=@ViewBag.Email&name=@ViewBag.Name&surname=@ViewBag.Surname">
                        Previous
                    </a>
                </li>
            }

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == pageNumber ? "active" : "")">
                    <a class="page-link"
                       href="?pageNumber=@i&email=@ViewBag.Email&name=@ViewBag.Name&surname=@ViewBag.Surname">
                        @i
                    </a>
                </li>
            }

            @if (pageNumber < totalPages)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="?pageNumber=@(pageNumber + 1)&email=@ViewBag.Email&name=@ViewBag.Name&surname=@ViewBag.Surname">
                        Next
                    </a>
                </li>
            }

        </ul>
    </nav>
}
