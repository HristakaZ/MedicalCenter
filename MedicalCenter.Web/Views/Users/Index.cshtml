@using MedicalCenter.Web.Constants
@using MedicalCenter.Web.Dtos.User
@model IEnumerable<GetUserDto>
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Всички потребители";
    int pageNumber = ViewBag.PageNumber;
    int pageSize = ViewBag.PageSize;
    int totalItems = ViewBag.TotalItems;
    int totalPages = (int)Math.Ceiling(totalItems / (double)pageSize);
    int loggedInUserID = HttpContextAccessor.HttpContext!.Session.GetInt32("UserID")!.Value;
    bool isAdministrator = HttpContextAccessor.HttpContext.Session.GetString("UserRole") == "Administrator";
}

<h1>Всички потребители</h1>

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <label class="form-label">Имейл</label>
            <input type="text" name="email" value="@ViewBag.Email" class="form-control" placeholder="Търсене по имейл..." />
        </div>

        <div class="col-md-4">
            <label class="form-label">Име</label>
            <input type="text" name="name" value="@ViewBag.Name" class="form-control" placeholder="Търсене по име..." />
        </div>

        <div class="col-md-4">
            <label class="form-label">Фамилия</label>
            <input type="text" name="surname" value="@ViewBag.Surname" class="form-control" placeholder="Търсене по фамилия..." />
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12 d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-primary">Прилагане на филтри</button>
            <a href="@Url.Action("Index", "Users")" class="btn btn-secondary">Изчистване на филтри</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Surname)</th>
            <th>@Html.DisplayNameFor(model => model.First().Role)</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td><b>@item.Role.Description</b></td>
                <td>
                    @switch (item.Role.ID)
                    {
                        case RoleConstants.AdminRoleId:
                            <a asp-action="Edit" asp-route-id="@item.ID">Редактиране на потребител</a>
                            break;
                        case RoleConstants.DoctorRoleId:
                            <a asp-action="EditDoctor" asp-route-id="@item.ID">Редактиране на доктор</a>
                            break;
                        case RoleConstants.PatientRoleId:
                            <a asp-action="EditPatient" asp-route-id="@item.ID">Редактиране на пациент</a>
                            break;
                    }
                    |
                    <a asp-action="Details" asp-route-id="@item.ID">Детайли</a>
                    @if ((item.ID != loggedInUserID && isAdministrator))
                    {
                        <text>| <a asp-action="Delete" asp-route-id="@item.ID">Изтриване</a></text>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (totalPages > 1)
{
    <nav>
        <ul class="pagination">
            @if (pageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="?pageNumber=@(pageNumber - 1)&email=@ViewBag.Email&name=@ViewBag.Name&surname=@ViewBag.Surname">
                        Предишна страница
                    </a>
                </li>
            }

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == pageNumber ? "active" : "")">
                    <a class="page-link"
                       href="?pageNumber=@i&email=@ViewBag.Email&name=@ViewBag.Name&surname=@ViewBag.Surname">
                        @i
                    </a>
                </li>
            }

            @if (pageNumber < totalPages)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="?pageNumber=@(pageNumber + 1)&email=@ViewBag.Email&name=@ViewBag.Name&surname=@ViewBag.Surname">
                        Следваща страница
                    </a>
                </li>
            }
        </ul>
    </nav>
}
