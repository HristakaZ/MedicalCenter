@using MedicalCenter.Web.Constants
@using MedicalCenter.Web.Dtos.User
@model IEnumerable<GetUserDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    <b>@Html.DisplayFor(modelItem => item.Role.Description)</b>
                </td>
                <td>
                    @switch (item.Role.ID)
                    {
                        case RoleConstants.AdminRoleId:
                            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                            break;
                        case RoleConstants.DoctorRoleId:
                            <a asp-action="EditDoctor" asp-route-id="@item.ID">Edit</a>
                            break;
                        case RoleConstants.PatientRoleId:
                            <a asp-action="EditPatient" asp-route-id="@item.ID">Edit</a>
                            break;
                    }
                    |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
