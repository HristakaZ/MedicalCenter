@using MedicalCenter.Web.Dtos.User
@model ChangePasswordDto

@{
    ViewData["Title"] = "Промяна на парола";
}

<!-- PAGE HEADER -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Промяна на парола</h1>

    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm px-4">
        <i class="bi bi-arrow-left"></i> Обратно към всички потребители
    </a>
</div>

<!-- FORM CARD (LEFT-ALIGNED) -->
<div class="card shadow-sm border-0 col-md-6 p-0">
    <div class="card-header bg-light fw-semibold">
        <i class="bi bi-key"></i> Въведете новата си парола
    </div>

    <div class="card-body">
        <form asp-action="ChangePassword" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="UserID" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- CURRENT PASSWORD -->
            <div class="mb-3">
                <label asp-for="CurrentPassword" class="form-label fw-semibold"></label>
                <input asp-for="CurrentPassword" type="password" class="form-control shadow-sm" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>

            <!-- NEW PASSWORD -->
            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label fw-semibold"></label>
                <input asp-for="NewPassword" type="password" class="form-control shadow-sm" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <!-- CONFIRM PASSWORD -->
            <div class="mb-3">
                <label asp-for="ConfirmNewPassword" class="form-label fw-semibold"></label>
                <input asp-for="ConfirmNewPassword" type="password" class="form-control shadow-sm" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <!-- SUBMIT BUTTON -->
            <button type="submit" class="btn btn-success px-4 py-2 shadow-sm">
                <i class="bi bi-check-lg"></i> Промяна на парола
            </button>
        </form>
    </div>
</div>

<!-- ERROR TOAST -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="errorToast" class="toast text-bg-danger border-0 position-relative"
         role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">

        <div class="d-flex">
            <div class="toast-body">Моля, поправете грешките във формата.</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast"></button>
        </div>

        <div class="toast-progress"></div>
    </div>
</div>

<!-- SERVER-SIDE ERROR TOAST -->
@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Count > 0)
{
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            new bootstrap.Toast(document.getElementById("errorToast")).show();
        });
    </script>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // CLIENT-SIDE VALIDATION ERROR TOAST
        document.addEventListener("DOMContentLoaded", () => {
            const form = $("form");

            form.on("invalid-form.validate", function () {
                const toastEl = document.getElementById("errorToast");
                if (toastEl) {
                    new bootstrap.Toast(toastEl).show();
                }
            });
        });
    </script>
}
