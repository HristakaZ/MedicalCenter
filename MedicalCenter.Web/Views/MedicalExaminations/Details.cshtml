@using MedicalCenter.Web.ViewModels.MedicalExamination
@model GetMedicalExaminationViewModel
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Детайли за медицински преглед";
}

<!-- PAGE HEADER -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Детайли за медицински преглед</h1>

    @if (HttpContextAccessor.HttpContext.Session.GetString("UserRole") != "Administrator")
    {
        <a asp-action="MyExaminations" class="btn btn-outline-secondary shadow-sm px-4">
            <i class="bi bi-arrow-left"></i> Обратно към моите прегледи
        </a>
    }
    else
    {
        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm px-4">
            <i class="bi bi-arrow-left"></i> Обратно към всички прегледи
        </a>
    }
</div>

<!-- DETAILS CARD -->
<div class="card shadow-sm border-0">
    <div class="card-header bg-light fw-semibold">
        <i class="bi bi-info-circle"></i> Информация за прегледа
    </div>

    <div class="card-body">

        <dl class="row mb-0">

            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(m => m.StartTime)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.StartTime)
            </dd>

            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(m => m.EndTime)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.EndTime)
            </dd>

            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(m => m.PatientName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.PatientName)
            </dd>

            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(m => m.DoctorName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.DoctorName)
            </dd>

            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(m => m.Diagnosis)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.Diagnosis)
            </dd>

            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(m => m.Recommendation)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(m => m.Recommendation)
            </dd>

        </dl>

    </div>
</div>