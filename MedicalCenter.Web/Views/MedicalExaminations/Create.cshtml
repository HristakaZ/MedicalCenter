@using MedicalCenter.Web.Dtos.MedicalExamination
@model AddMedicalExaminationDto
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MedicalExamination</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Doctor</label>
                <select asp-for="SelectedDoctor" class="form-control" asp-items="Model.Doctors"></select>
                <span asp-validation-for="SelectedDoctor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div id="availabilityMessage" style="margin-top: 5px;"></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="submitBtn" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (HttpContextAccessor.HttpContext.Session.GetString("UserRole") != "Administrator")
    {
        <a asp-action="MyExaminations">Back to List</a>
    }
    else
    {
        <a asp-action="Index">Back to List</a>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        flatpickr("#StartTime", {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            time_24hr: true,
            minuteIncrement: 30
        });
        flatpickr("#EndTime", {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            time_24hr: true,
            minuteIncrement: 30
        });
    </script>
}
