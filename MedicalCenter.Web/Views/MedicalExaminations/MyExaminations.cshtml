@using MedicalCenter.Web.ViewModels.MedicalExamination
@model IEnumerable<GetMedicalExaminationViewModel>
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Моите медицински прегледи";
    int pageNumber = ViewBag.PageNumber;
    int pageSize = ViewBag.PageSize;
    int totalItems = ViewBag.TotalItems;
    int totalPages = (int)Math.Ceiling(totalItems / (double)pageSize);
    string userRole = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
}

<!-- PAGE HEADER -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Моите медицински прегледи</h1>

    @if (userRole == "Patient")
    {
        <a asp-action="Create" class="btn btn-success shadow-sm px-4">
            <i class="bi bi-plus-circle"></i> Създаване на нов
        </a>
    }
</div>

<!-- FILTER CARD -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-light fw-semibold">
        <i class="bi bi-funnel"></i> Филтри
    </div>

    <div class="card-body">
        <form method="get">
            <div class="row g-3">

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Начални дата и час</label>
                    <input type="text" id="startDate" name="startDate"
                           value="@ViewBag.StartDate"
                           class="form-control shadow-sm" />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Крайни дата и час</label>
                    <input type="text" id="endDate" name="endDate"
                           value="@ViewBag.EndDate"
                           class="form-control shadow-sm" />
                </div>

            </div>

            <div class="d-flex justify-content-end gap-2 mt-3">
                <button type="submit" class="btn btn-primary px-4 shadow-sm">
                    <i class="bi bi-search"></i> Прилагане на филтри
                </button>

                <a href="@Url.Action("MyExaminations", "MedicalExaminations")"
                   class="btn btn-outline-secondary px-4 shadow-sm">
                    <i class="bi bi-x-circle"></i> Изчистване
                </a>
            </div>
        </form>
    </div>
</div>

<!-- TABLE CARD -->
<div class="card shadow-sm border-0">
    <div class="card-header bg-light fw-semibold">
        <i class="bi bi-list-ul"></i> Списък с прегледи
    </div>

    <div class="card-body p-0">
        <table class="table table-hover table-striped align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().StartTime)</th>
                    <th>@Html.DisplayNameFor(model => model.First().EndTime)</th>
                    <th>@Html.DisplayNameFor(model => model.First().PatientName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().DoctorName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Diagnosis)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Recommendation)</th>
                    <th class="text-end">Действия</th>
                </tr>
            </thead>

            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center py-4 text-muted">
                            <i class="bi bi-inbox fs-3 d-block mb-2"></i>
                            Няма намерени прегледи.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@item.EndTime.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@item.PatientName</td>
                            <td>@item.DoctorName</td>
                            <td>@item.Diagnosis</td>
                            <td>@item.Recommendation</td>

                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.ID"
                                   class="btn btn-sm btn-outline-warning shadow-sm me-1">
                                    <i class="bi bi-pencil"></i> Редактиране
                                </a>

                                <a asp-action="Details" asp-route-id="@item.ID"
                                   class="btn btn-sm btn-outline-info shadow-sm me-1">
                                    <i class="bi bi-info-circle"></i> Детайли
                                </a>

                                @if (userRole == "Patient")
                                {
                                    <a asp-action="Delete" asp-route-id="@item.ID"
                                       class="btn btn-sm btn-outline-danger shadow-sm">
                                        <i class="bi bi-trash"></i> Изтриване
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- PAGINATION -->
@if (totalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">

            <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
                <a class="page-link"
                   href="?pageNumber=@(pageNumber - 1)&startDate=@ViewBag.StartDate&endDate=@ViewBag.EndDate">
                    <i class="bi bi-chevron-left"></i>
                </a>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == pageNumber ? "active" : "")">
                    <a class="page-link"
                       href="?pageNumber=@i&startDate=@ViewBag.StartDate&endDate=@ViewBag.EndDate">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(pageNumber == totalPages ? "disabled" : "")">
                <a class="page-link"
                   href="?pageNumber=@(pageNumber + 1)&startDate=@ViewBag.StartDate&endDate=@ViewBag.EndDate">
                    <i class="bi bi-chevron-right"></i>
                </a>
            </li>

        </ul>
    </nav>
}

<!-- SUCCESS TOAST -->
@if (TempData["Success"] != null)
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="successToast" class="toast text-bg-success border-0 position-relative"
             role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="4000">

            <div class="d-flex">
                <div class="toast-body">
                    @TempData["Success"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast"></button>
            </div>

            <div class="toast-progress"></div>
        </div>
    </div>
}

<!-- FLATPICKR INITIALIZATION -->
<script>
    flatpickr("#startDate", {
        enableTime: true,
        dateFormat: "Y-m-d H:i",
        time_24hr: true,
        minuteIncrement: 30,
        allowInput: true
    });

    flatpickr("#endDate", {
        enableTime: true,
        dateFormat: "Y-m-d H:i",
        time_24hr: true,
        minuteIncrement: 30,
        allowInput: true
    });
</script>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const successMessage = "@TempData["Success"]";
            if (successMessage && successMessage.length > 0) {
                const toastEl = document.getElementById("successToast");
                if (toastEl) {
                    new bootstrap.Toast(toastEl).show();
                }
            }
        });
    </script>
}
