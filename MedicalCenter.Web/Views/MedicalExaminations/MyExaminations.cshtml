@using MedicalCenter.Web.ViewModels.MedicalExamination
@model IEnumerable<GetMedicalExaminationViewModel>
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Моите медицински прегледи";
    int pageNumber = ViewBag.PageNumber;
    int pageSize = ViewBag.PageSize;
    int totalItems = ViewBag.TotalItems;
    int totalPages = (int)Math.Ceiling(totalItems / (double)pageSize);
    string userRole = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
}

<!-- Flatpickr -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<h1>Моите медицински прегледи</h1>

@if (userRole == "Patient")
{
    <p>
        <a asp-action="Create" class="btn btn-success">Създаване на нов</a>
    </p>
}

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-6">
            <label class="form-label">Начални дата и час</label>
            <input type="text" id="startDate" name="startDate" value="@ViewBag.StartDate" class="form-control" />
        </div>

        <div class="col-md-6">
            <label class="form-label">Крайни дата и час</label>
            <input type="text" id="endDate" name="endDate" value="@ViewBag.EndDate" class="form-control" />
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12 d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-primary">
                Прилагане на филтри
            </button>

            <a href="@Url.Action("MyExaminations", "MedicalExaminations")" class="btn btn-secondary">
                Изчистване на филтри
            </a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().StartTime)</th>
            <th>@Html.DisplayNameFor(model => model.First().EndTime)</th>
            <th>@Html.DisplayNameFor(model => model.First().PatientName)</th>
            <th>@Html.DisplayNameFor(model => model.First().DoctorName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Diagnosis)</th>
            <th>@Html.DisplayNameFor(model => model.First().Recommendation)</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@item.EndTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@item.PatientName</td>
                <td>@item.DoctorName</td>
                <td>@item.Diagnosis</td>
                <td>@item.Recommendation</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Редактиране</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Детайли</a>
                    @if (userRole == "Patient")
                    {
                        <text>| <a asp-action="Delete" asp-route-id="@item.ID">Изтриване</a></text>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (totalPages > 1)
{
    <nav>
        <ul class="pagination">
            @if (pageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="?pageNumber=@(pageNumber - 1)&startDate=@ViewBag.StartDate&endDate=@ViewBag.EndDate">
                        Предишна страница
                    </a>
                </li>
            }

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == pageNumber ? "active" : "")">
                    <a class="page-link"
                       href="?pageNumber=@i&startDate=@ViewBag.StartDate&endDate=@ViewBag.EndDate">
                        @i
                    </a>
                </li>
            }

            @if (pageNumber < totalPages)
            {
                <li class="page-item">
                    <a class="page-link"
                       href="?pageNumber=@(pageNumber + 1)&startDate=@ViewBag.StartDate&endDate=@ViewBag.EndDate">
                        Следваща страница
                    </a>
                </li>
            }
        </ul>
    </nav>
}

<!-- FLATPICKR INITIALIZATION -->
<script>
    flatpickr("#startDate", {
        enableTime: true,
        dateFormat: "Y-m-d H:i",
        time_24hr: true,
        minuteIncrement: 30,
        allowInput: true
    });

    flatpickr("#endDate", {
        enableTime: true,
        dateFormat: "Y-m-d H:i",
        time_24hr: true,
        minuteIncrement: 30,
        allowInput: true
    });
</script>
