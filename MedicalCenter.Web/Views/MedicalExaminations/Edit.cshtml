@using MedicalCenter.Web.ViewModels.MedicalExamination
@model GetMedicalExaminationViewModel
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Редактиране на медицински преглед";
}

<!-- PAGE HEADER -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-1">Редактиране на медицински преглед</h1>
        <h5 class="text-muted">
            Доктор @Model.DoctorName — @Model.DoctorSpecialty
        </h5>
    </div>

    @if (HttpContextAccessor.HttpContext.Session.GetString("UserRole") != "Administrator")
    {
        <a asp-action="MyExaminations" class="btn btn-outline-secondary shadow-sm px-4">
            <i class="bi bi-arrow-left"></i> Обратно към моите прегледи
        </a>
    }
    else
    {
        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm px-4">
            <i class="bi bi-arrow-left"></i> Обратно към всички прегледи
        </a>
    }
</div>

<!-- EDIT FORM CARD -->
<div class="card shadow-sm border-0 col-md-6 p-0">
    <div class="card-header bg-light fw-semibold">
        <i class="bi bi-pencil-square"></i> Промяна на информацията
    </div>

    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="ID" />

            <!-- START TIME -->
            <div class="mb-3">
                <label asp-for="StartTime" class="form-label fw-semibold"></label>
                <input asp-for="StartTime" class="form-control shadow-sm" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <!-- END TIME -->
            <div class="mb-3">
                <label asp-for="EndTime" class="form-label fw-semibold"></label>
                <input asp-for="EndTime" class="form-control shadow-sm" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>

            <!-- DOCTOR-ONLY FIELDS -->
            @if (HttpContextAccessor.HttpContext.Session.GetString("UserRole") == "Doctor")
            {
                <div class="mb-3">
                    <label asp-for="Diagnosis" class="form-label fw-semibold"></label>
                    <textarea asp-for="Diagnosis" class="form-control shadow-sm" rows="4"></textarea>
                    <span asp-validation-for="Diagnosis" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Recommendation" class="form-label fw-semibold"></label>
                    <textarea asp-for="Recommendation" class="form-control shadow-sm" rows="4"></textarea>
                    <span asp-validation-for="Recommendation" class="text-danger"></span>
                </div>
            }

            <!-- SUBMIT BUTTON -->
            <button type="submit" class="btn btn-success px-4 py-2 shadow-sm mt-2">
                <i class="bi bi-check-lg"></i> Запис
            </button>
        </form>
    </div>
</div>

<!-- ERROR TOAST (always rendered so client-side validation can trigger it) -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="errorToast" class="toast text-bg-danger border-0 position-relative"
         role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">

        <div class="d-flex">
            <div class="toast-body">Моля, поправете грешките във формата.</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast"></button>
        </div>

        <div class="toast-progress"></div>
    </div>
</div>

<!-- SERVER-SIDE ERROR TOAST -->
@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Count > 0)
{
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            new bootstrap.Toast(document.getElementById("errorToast")).show();
        });
    </script>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Flatpickr initialization
        flatpickr("#StartTime", {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            time_24hr: true,
            minuteIncrement: 30
        });

        flatpickr("#EndTime", {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            time_24hr: true,
            minuteIncrement: 30
        });

        // CLIENT-SIDE VALIDATION ERROR TOAST
        document.addEventListener("DOMContentLoaded", () => {
            const form = $("form");

            form.on("invalid-form.validate", function () {
                const toastEl = document.getElementById("errorToast");
                if (toastEl) {
                    new bootstrap.Toast(toastEl).show();
                }
            });
        });
    </script>
}
